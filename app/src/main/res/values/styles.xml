<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Style for Button-->
    <style name="ButtonFlat" parent="Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/button_flat</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <!-- Style for login input texts-->
    <style name="InputCredentials">
        <item name="android:inputType">textCapWords</item>
    </style>
    <style name="InputCredentials.Email">
        <item name="android:maxLength">120</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>
    <style name="InputCredentials.Password">
        <item name="android:maxLength">120</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="InputCredentials.Name">
        <item name="android:maxLength">120</item>
    </style>

</resources>
